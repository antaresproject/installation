<fieldset name="inputs" class="system">
    <legend>{{ trans('antares/foundation::install.system.title') }}</legend>
    {% for name,requirement in checklist %}            
        <div class="form-block">
            <div class="col-group">
                <div class="col-mb-4">
                    {{ Form.label(name, trans("antares/foundation::install.system."~name~".name"),{'class':'form-block__name jc-fe'})|raw }}    
                </div>
                <div class="col-mb-1">
                    <div class="input-field ">
                        <i class="zmdi zmdi-hc-3x {{ not requirement.is == requirement.should ? 'zmdi-close':'zmdi-check'  }} "></i>
                    </div>
                </div>

                {% if not requirement['is'] == requirement['should'] %}                        
                </div>
                <div class="col-group">
                    <div class="col-mb-4">
                        <label></label>    
                    </div>
                    <div class="col-mb-20">
                        <div class="input-field__desc">
                            <p class="solution">
                                <span>
                                    {{ trans("antares/foundation::install.solution") }}:
                                </span>
                                {{ trans("antares/foundation::install.system."~name~".solution",{'path':requirement.data.path})|raw }}
                            </p>
                        </div>
                    </div>                      
                {% endif %}  
                {% if requirement['is'] == requirement['should'] %}                                                                                 
                    {% if name=='version' %}
                        <div class="col-mb-18">
                            <div class="input-field__desc">
                                <span>{{ requirement.data.version }}</span>
                            </div>
                        </div>
                    {% elseif name == 'phpExtensions' %}                                                 
                        <div class="col-mb-18">
                            <div class="input-field__desc">
                                <p>
                                    {{ trans('Following php extensions are installed') }}:                                    
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-group">
                        <div class="col-mb-4"></div>
                        <div class="col-mb-1"></div>
                        <div class="col-mb-18">
                            <div class="input-field__desc">
                                <p>
                                    {{ requirement['data']['extensions']|join(', ')|raw }}   
                                </p>                                
                            </div>
                        </div>
                    {% elseif name=='apacheModules' %}
                        <div class="col-mb-18">
                            <div class="input-field__desc">
                                <p>
                                    {{ trans('Following apache modules are installed') }}:                                 
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-group">
                        <div class="col-mb-4"></div>
                        <div class="col-mb-1"></div>
                        <div class="col-mb-18">
                            <div class="input-field__desc">
                                <p>
                                    {{ requirement['data']['modules']|join(', ')|raw }}  
                                </p>                                
                            </div>
                        </div>
                    {% endif %}
                {% else %}
                    {% if requirement['explicit']==true %}
                        {% if name=='version' %}
                            {#<div class="form-block">
                                <div class="col-group">
                                    <div class="col-mb-4">
                                        <label></label>    
                                    </div>
                                    <div class="col-mb-20">
                                        <div class="input-field__desc">
                                            <p class="solution">
                                                {{ requirement['data']['error'] }}    
                                            </p>
                                        </div>
                                    </div>                  
                                </div>
                            </div> #}
                        {% elseif name == 'phpExtensions' %} 
                            {#<div class="form-block">
                                <div class="col-group">
                                    <div class="col-mb-4">
                                        <label></label>    
                                    </div>
                                    <div class="col-mb-20">
                                        <div class="input-field__desc">
                                            <p class="solution">
                                                {{ requirement['data']['error'] }}   
                                            </p>
                                        </div>
                                    </div>                  
                                </div>
                            </div> #}

                        {% elseif name=='apacheModules' %}
                            {#<div class="form-block">
                                <div class="col-group">
                                    <div class="col-mb-4">
                                        <label></label>    
                                    </div>
                                    <div class="col-mb-20">
                                        <div class="input-field__desc">
                                            <p class="solution">
                                                {{ requirement['data']['error'] }}   
                                            </p>
                                        </div>
                                    </div>                  
                                </div>
                            </div> #}
                        {% endif %}                            
                    {% else %}

                    {% endif %}
                {% endif %}
            </div>
        </div>
    {% endfor %}
</fieldset>
