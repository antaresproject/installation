<fieldset name="inputs" class="database-settings">
    <legend>{{ trans('antares/foundation::install.database.title') }}</legend>
    <div class="form-block">
        <div class="col-group">
            <div class="col-mb-4">
                <label class="form-block__name jc-fe">
                    {{ trans('antares/foundation::install.database.type') }}
                </label>
            </div>
            <div class="col-mb-20">
                <div class="input-field ">
                    <input disabled  type="text" value="{{ database['driver'] }}" class="w370">
                </div>
            </div>
        </div>
    </div>
    {% if database['host'] is defined %}
        <div class="form-block">
            <div class="col-group">
                <div class="col-mb-4">
                    <label class="form-block__name jc-fe">
                        {{ trans('antares/foundation::install.database.host') }}
                    </label>
                </div>
                <div class="col-mb-20">
                    <div class="input-field ">
                        <input disabled type="text" value="{{ database['host'] }}" class="w370">
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="form-block">
        <div class="col-group">
            <div class="col-mb-4">
                <label class="form-block__name jc-fe">
                    {{ trans('antares/foundation::install.database.name') }}
                </label>
            </div>
            <div class="col-mb-20">
                <div class="input-field ">
                    <input disabled type="text" value="{{ database['database'] }}" class="w370">
                </div>
            </div>
        </div>
    </div>    
    <div class="form-block">
        <div class="col-group">
            <div class="col-mb-4">
                <label class="form-block__name jc-fe">
                    {{ trans('antares/foundation::install.connection.status') }}
                </label>
            </div>
            <div class="col-mb-1">
                <div class="input-field ">
                    <i class="alert__icon zmdi {{ not databaseSettings.databaseConnection['is']==true ? 'zmdi-close':'zmdi-check' }}"></i>
                </div>
            </div>
            <div class="col-mb-19">
                <div class="input-field__desc">
                    {% if databaseSettings.databaseConnection['is']==true %}  
                        <p>                                
                            {{ trans('antares/foundation::install.connection.success') }}
                        </p>
                    {% else %}                

                        <p>
                            {{ trans('antares/foundation::install.connection.fail') }}
                            {% if databaseSettings.databaseConnection['data']['error'] is defined %} 
                                <span>Error:</span>{{ databaseSettings.databaseConnection['data']['error']}}
                            {% endif %}
                        </p>

                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="form-block">
        <div class="col-group">
            <div class="col-mb-4">
                <label class="form-block__name jc-fe">
                    {{ trans('antares/foundation::install.mysqlDumpCommand.status')}}
                </label>
            </div>
            <div class="col-mb-1">
                <div class="input-field">
                    <i class="alert__icon zmdi {{ not databaseSettings.mysqlDumpCommand['is']==true ? 'zmdi-close':'zmdi-check' }}"></i>
                </div>
            </div>
            <div class="col-mb-19">
                <div class="input-field__desc">
                    {% if databaseSettings.mysqlDumpCommand['is']==true %}  
                        <p>                                
                            {{ trans('antares/foundation::install.mysqlDumpCommand.success')}}
                        </p>
                    {% else %}                
                        {{ trans('antares/foundation::install.mysqlDumpCommand.fail')}}                   
                    {% endif %}
                </div>
            </div>
        </div>
    </div>    
</fieldset>