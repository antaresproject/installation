{% extends "antares/foundation::layouts.installer.main" %}
{% block app_wrapper %}
    <div id="app-wrapper" class="app-install__step-1">
        <div class="app-content page-create full-page">           
            <section class="main-content" data-preload>
                <div class="grid-container grid-container--2col grid-container--no-padd {{grid_container_class}}">
                    <div class="grid-col grid-col--menu">
                        <div class="menu-aside-container">
                            {% include 'antares/installer::partials._menu' with {'active': 4} %}    
                        </div>
                    </div>
                    <div class="grid-col grid-col--container">
                        {{ set_meta('header::class', 'main-header') }}                        
                        {% include 'antares/foundation::components.messages' %}    
                        {% block content %}       
                            <h1>
                                {{ trans('antares/foundation::install.steps.install') }} (<span id="progress">0</span>%)
                            </h1>
                            <div id="install-progress-console" >
                                <form style="position: relative; ">
                                    <textarea id="console" name="console" data-url="{{ handles('antares::install/progress/preview') }}">

                                    </textarea>
                                </form>
                            </div>
                            <div class="app-content__footer jc-fs">
                                <div class="btn-group">
                                    <a href="{{ handles('antares::install/progress/stop') }}" class="btn btn--md btn--default mdl-button mdl-js-button stop-and-back">
                                        {{ trans('antares/foundation::install.stopAndBack') }}
                                    </a>
                                </div>
                            </div>
                        {% endblock %}
                    </div>
                </div>
            </section>                        
        </div>
    </div>    
{% endblock %}