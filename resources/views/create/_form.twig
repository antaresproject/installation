{% set formbuilder=app('form') %}
{{ formbuilder.open({'url':handles('antares::install/create'), 'method':'POST','class':'form--hor','data-toggle':'validator','role':'form'})|raw }}
{% if token is not null %}
    {{ formbuilder.token()|raw }}
{% endif %}    
{% for hidden in hiddens %}
    {{ hidden|raw }}
{% endfor %}
<div class="col-group p24 m0">
    <div class="col-mb-34">
        <fieldset name="inputs" class="admin-account">
            <legend>
                Administrator Account
            </legend>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-3">
                        {{ app('form').label('email', trans('antares/foundation::label.users.email'),{'class':'form-block__name'})|raw }}            
                    </div>
                    <div class="col-mb-6">
                        <div class="input-field ">                
                            {{ app('form').input('email', 'email', '',{'required':'required','id':'inputEmail'})|raw }}                            
                        </div>    
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-group">
                    <div class="col-mb-3">

                    </div>
                    <div class="col-mb-6">
                        <div class="input-field__desc">                
                            E-mail address which will be used to first login.
                        </div>    
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-3">
                        {{ app('form').label('password', trans('antares/foundation::label.users.password'),{'class':'form-block__name'})|raw }}
                    </div>
                    <div class="col-mb-6">
                        <div class="input-field ">                
                            {{ app('form').input('password', 'password', '', {'required' : 'required','id':'inputPassword','data-minlength':5})|raw }}
                        </div>    
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-3">
                        {{ app('form').label('confirm_password', 'Confirm Password',{'class':'form-block__name'})|raw }}
                    </div>
                    <div class="col-mb-6">
                        <div class="input-field ">                
                            {{ app('form').input('password', 'confirm_password', '', {'required' : 'required','data-match-error':"Password fields have different values.",'id':'inputPasswordConfirm','data-minlength':5,'data-match':'#inputPassword'})|raw }}
                        </div>    
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-group">
                    <div class="col-mb-3">

                    </div>
                    <div class="col-mb-6">
                        <div class="input-field__desc">                
                            Password should contain min. 5 characters.
                        </div>    
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-3">
                        {{ app('form').label('firstname', trans('antares/foundation::label.users.firstname'),{'class':'form-block__name'})|raw }}            
                    </div>
                    <div class="col-mb-6">
                        <div class="input-field ">                
                            {{ app('form').input('text', 'firstname', 'John', {'required' : 'required'})|raw }}                    
                        </div>    
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-group">
                    <div class="col-mb-3">

                    </div>
                    <div class="col-mb-6">
                        <div class="input-field__desc">                
                            Firstname field is required.
                        </div>    
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-3">
                        {{ app('form').label('lastname', trans('antares/foundation::label.users.lastname'),{'class':'form-block__name'})|raw }}
                    </div>
                    <div class="col-mb-6">
                        <div class="input-field ">                
                            {{ app('form').input('text', 'lastname', 'Doe', {'required' : 'required'})|raw }}                    
                        </div>    
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-group">
                    <div class="col-mb-3">

                    </div>
                    <div class="col-mb-6">
                        <div class="input-field__desc">                
                            Lastname field is required.
                        </div>    
                    </div>
                </div>
            </div>            
        </fieldset>
        <fieldset name="inputs" class="apl-info">
            <legend>{{ trans('antares/foundation::install.steps.application') }}</legend>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-3">
                        {{ app('form').label('site_name', trans('antares/foundation::label.name'),{'class':'form-block__name'})|raw }}
                    </div>
                    <div class="col-mb-6">
                        <div class="input-field ">                
                            {{ app('form').input('text', 'site_name', siteName, {'required' : 'required'})|raw }} 
                        </div>    
                        <div class="help-block with-errors"></div>
                        <span  class="error col-13 col-mb-11 nopadding">
                            {{ errors.first('site_name', ':message')|raw }}
                        </span>
                    </div>
                </div>
                <div class="col-group">
                    <div class="col-mb-3">

                    </div>
                    <div class="col-mb-6">
                        <div class="input-field__desc">                
                            Name of application instance (eg.: Antares). This field is required.
                        </div>    
                    </div>
                </div>
            </div>            
        </fieldset>
    </div>
</div>
<div class="app-content__footer jc-fs">
    <div class="btn-group">
        <a href="{{ handles('antares/foundation::install') }}" class="btn btn--md btn--default mdl-button mdl-js-button mdl-js-ripple-effect" >
            <i class="pl8 zmdi zmdi-long-arrow-left"></i> {{ trans('Back') }}
        </a>
        <button type="submit" class="btn btn--md btn--primary mdl-button mdl-js-button mdl-js-ripple-effect">
            {{ trans('Next') }} <i class="pl8 zmdi zmdi-long-arrow-right"></i>
        </button>
    </div>
</div>

{{ formbuilder.close()|raw }}
